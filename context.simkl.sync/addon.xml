<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!--
SIMKL Context Menu - Manual Sync Button
Version: 1.0.0
Last Modified: 2025-12-28

CHANGELOG:
1.0.0 - Initial release
        - Adds "Sync to SIMKL now" to context menu
        - Works on movies and TV episodes
        - Triggers immediate sync for selected item
        - Delegates to script.simkl for sync management
        - Professional logging with version tracking
        - Full error handling
-->
<addon id="context.simkl.sync" 
       name="SIMKL - Manual sync button" 
       version="1.0.0" 
       provider-name="Claude.ai with assistance from Michael Beck">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.simkl" version="6.9.0"/>
    </requires>
    <extension point="kodi.context.item">
        <menu id="kodi.core.main">
            <item library="addon.py">
                <label>32000</label>
                <visible>String.IsEqual(ListItem.dbtype,movie) | String.IsEqual(ListItem.dbtype,episode)</visible>
            </item>
        </menu>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Add SIMKL manual sync button to context menu in library</summary>
        <description lang="en_GB">Add SIMKL manual sync button to the context menu in your library. Instantly sync individual items to SIMKL without waiting for playback.</description>
        <platform>all</platform>
        <license>MIT</license>
        <assets>
            <icon>icon.png</icon>
        </assets>
    </extension>
</addon>
